@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
}
<link rel="stylesheet" href="~/css/BootswatchTheme.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/CalculoIndiceAcademico.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/LogIn.css" />

<section class="h-100 gradient-form" style="background-color: #040F16;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6" style="background-color: #D9D9D9">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <h1><i class="bi bi-calculator"></i> <span class="mt-1 mb-5 pb-1">Academix</span> </h1>
                                    
                                </div>

                                <form class="mt-5" id="account" method="post">
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <p class="mb-4">Favor iniciar Sesión</p>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Input.Email" id="exampleInputEmail1" class="form-control" aria-describedby="emailHelp" placeholder="Correo electrónico" />
                                    </div>

                                    <div class="form-outline mb-1 position-relative">
                                        <input asp-for="Input.Password" class="form-control position-relative" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                                        <span asp-validation-for="Input.Password" class="text-danger position-relative"></span>
                                    </div>

                                    <div class="form-check">
                                        <label asp-for="Input.RememberMe" class="form-check-label" for="flexCheckDefault">
                                            <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" value="" id="flexCheckDefault" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    <div style="float:right" class="mb-5">
                                        <p>
                                            <a style="color: #01BAEF;text-align:right" class="link-primary" id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                                        </p>
                                    </div>
                                    
                                    <div class="text-center pt-1 mb-5 pb-1" style="clear:right">
                                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg mb-3" style="border-radius:8px; background-color:#0B4F6C"> Iniciar Sesión</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h2 class="mb-4" style="font-weight:bolder">Tu mundo Academix</h2>
                                <p class="small mb-0">
                                    Aplicación para cálculo de índice académico para estudiantes, profesores, coordinadores y administradores.
                                    Diseñada para ayudar a las instituciones unviersitarias a poder llevar un mejor recorde de todas las asignaturas
                                    que se imparten, al igual que el progreso de sus estudiantes.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
