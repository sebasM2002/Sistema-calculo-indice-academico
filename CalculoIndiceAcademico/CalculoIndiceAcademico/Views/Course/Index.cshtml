@model IEnumerable<CourseModel>
@{
    ViewData["Title"] = "Index";
}
<link href="~/css/TableStandard.css" rel="stylesheet">
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 style="color:#0B4F6C">Asignaturas</h2>
        </div>
        <div class="text-end">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary" style="width:200px">
                <i class="bi bi-plus-circle"></i> &nbsp; Crear Asignatura
            </a>
        </div>
    </div>
</div>

<table class="container" style="width:100%">
    <thead>
        <tr>
            <th>
                Clave
            </th>
            <th>
                Nombre
            </th>
            <th>
                Creditos
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.CourseID
                </td>
                <td width="40%">
                    @obj.CourseName
                </td>
                <td width="10%">
                    @obj.Credits
                </td>
                <td>
                    <div class="btn-group pt-3 mx-5" role="group" style="width:50%">
                        <a asp-controller="Course" asp-action="Edit" asp-route-id="@obj.CourseID" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Editar</a>
                        <a asp-controller="Course" asp-action="Delete" asp-route-id="@obj.CourseID" class="btn btn-danger mx-3">
                            <i class="bi bi-trash-fill"></i> Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>