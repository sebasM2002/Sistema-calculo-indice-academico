@model CareerModel
<link href="~/css/TableStandard.css" rel="stylesheet">
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Crear Carrera</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="ID_Career">Clave</label>
            <input asp-for="ID_Career" class="form-control" />
            <span asp-validation-for="ID_Career" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Career">Nombre</label>
            <input asp-for="Career" class="form-control" />
            <span asp-validation-for="Career" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">
            Crear
        </button>
        <a asp-controller="Career" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Regresar
        </a>
    </div>
    
</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

