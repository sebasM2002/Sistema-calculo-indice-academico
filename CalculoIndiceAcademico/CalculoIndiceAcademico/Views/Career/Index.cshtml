@model IEnumerable<CareerModel>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Carreras</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Career" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Agregar Carrera
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Clave
            </th>
            <th>
                Nombre
            </th>   
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.ID_Career
                </td>
                <td width="50%">
                    @obj.Career
                </td>
            </tr>
        }
    </tbody>
</table>
